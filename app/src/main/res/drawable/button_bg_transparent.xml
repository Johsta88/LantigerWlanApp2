<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- button focused state background color -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#0F0032FF" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- button pressed state background color -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1F0032FF" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- button default background color -->
    <item>
        <shape android:shape="rectangle">
            <!-- apply button background transparent, full opacity -->
            <solid android:color="#0F0068FF" />
            <!-- make button border solid color, nontransparent -->
            <!-- <stroke android:color="#7F0068FF" android:width="2dp"/> -->
            <corners android:radius="2dp" />
        </shape>
    </item>

</selector>