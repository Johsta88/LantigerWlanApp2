                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/ld4_imageView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/led_off"/>
                <ToggleButton
                    android:id="@+id/button_p2.7"
